---
type Props = {
  toggleId: string;
};

const { toggleId } = Astro.props;
---

<div class="toggle-container">
  <label class="toggle">
    <input type="checkbox" id="toggle-switch" data-toggle-id={toggleId} />
    <span class="slider"></span>
  </label>
</div>

<style>
  .toggle-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .toggle {
    position: relative;
    width: 50px;
    height: 25px;
  }

  .toggle input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--blue-700);
    transition: 0.4s;
    border-radius: 25px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 4px;
    bottom: 2.5px;
    background-color: var(--blue-500);
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: var(--pink-800);
  }

  input:checked + .slider:before {
    transform: translateX(24px);
  }
</style>
